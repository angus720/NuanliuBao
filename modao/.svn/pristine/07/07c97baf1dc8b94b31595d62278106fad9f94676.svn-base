<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.PaperInvoiceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <nuanliu.com.modao.widget.ElasticScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <nuanliu.com.modao.widget.TouchRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:gTouchEffect="ripple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:text="发票抬头"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_invoice_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="请填写发票抬头"
                        android:paddingRight="10dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </nuanliu.com.modao.widget.TouchRelativeLayout>

                <View style="@style/view_line_gray" />

                <nuanliu.com.modao.widget.TouchRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:gTouchEffect="ripple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:text="发票内容"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_invoice_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="10dp"
                        android:text="供热费"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </nuanliu.com.modao.widget.TouchRelativeLayout>

                <View style="@style/view_line_gray" />

                <nuanliu.com.modao.widget.TouchRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:gTouchEffect="ripple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:text="邮寄地址"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_choose_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_go_address"
                        android:paddingRight="10dp"
                        android:text="系统默认之前的绑定地址"
                        android:textColor="@color/charactergray"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_go_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="10dp"
                        android:src="@mipmap/go_next" />

                </nuanliu.com.modao.widget.TouchRelativeLayout>

                <View style="@style/view_line_gray" />

                <nuanliu.com.modao.widget.TouchRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:gTouchEffect="ripple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:text="收件人"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_receive_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="收件人"
                        android:paddingRight="10dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </nuanliu.com.modao.widget.TouchRelativeLayout>

                <View style="@style/view_line_gray" />

                <nuanliu.com.modao.widget.TouchRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:gTouchEffect="ripple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:text="联系电话"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="联系电话"
                        android:paddingRight="10dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </nuanliu.com.modao.widget.TouchRelativeLayout>

                <View style="@style/view_line_gray" />

                <nuanliu.com.modao.widget.TouchRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:gTouchEffect="ripple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:text="纳税人识别号"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_taxpayer_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="纳税人识别号"
                        android:paddingRight="10dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </nuanliu.com.modao.widget.TouchRelativeLayout>

                <View style="@style/view_line_gray" />

                <nuanliu.com.modao.widget.TouchRelativeLayout
                    android:id="@+id/trl_buyer_type"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:gTouchEffect="ripple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:text="购货方类型"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_buyer_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/choose_triangle"
                        android:paddingRight="10dp"
                        android:text="企业"
                        android:textColor="@color/charactertintgray"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/choose_triangle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="10dp"
                        android:src="@mipmap/choose_triangle" />

                </nuanliu.com.modao.widget.TouchRelativeLayout>

                <View style="@style/view_line_gray" />

                <nuanliu.com.modao.widget.TouchRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:gTouchEffect="ripple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:text="取票方式"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </nuanliu.com.modao.widget.TouchRelativeLayout>

                <nuanliu.com.modao.widget.TouchRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:gTouchEffect="ripple">

                    <Button
                        android:id="@+id/btn_oneself_pick"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/radio_button_select_bg"
                        android:text="自取"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_mail"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_select_bg"
                        android:text="邮寄"
                        android:textColor="@color/orange" />

                    <Button
                        android:id="@+id/btn_artifical_served"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_select_bg"
                        android:text="人工送达"
                        android:textColor="@color/orange" />

                </nuanliu.com.modao.widget.TouchRelativeLayout>

                <View style="@style/view_line_gray" />

                <nuanliu.com.modao.widget.TouchRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:gTouchEffect="ripple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:text="备注"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </nuanliu.com.modao.widget.TouchRelativeLayout>

                <nuanliu.com.modao.widget.TouchRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:gTouchEffect="ripple">

                    <EditText
                        android:id="@+id/et_invoice_note"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:background="@null"
                        android:gravity="top"
                        android:hint="请填写您的备注，限30字以内"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </nuanliu.com.modao.widget.TouchRelativeLayout>

            </LinearLayout>

        </nuanliu.com.modao.widget.ElasticScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/btn_invoice_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/orange"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>