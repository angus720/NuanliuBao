<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/gray" />

        <nuanliu.com.modao.widget.TouchTextView
            android:id="@+id/tv_season1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_rectangular_top2_5dp_bgwhite"
            android:clickable="true"
            android:gravity="center"
            android:text="2017~2018"
            android:textColor="@color/charactertintgray"
            android:textSize="15sp"
            app:gTouchEffect="ripple" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <nuanliu.com.modao.widget.TouchTextView
            android:id="@+id/tv_season2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_rectangular_normal"
            android:clickable="true"
            android:gravity="center"
            android:text="2016~2017"
            android:textColor="@color/charactertintgray"
            android:textSize="15sp"
            app:gTouchEffect="ripple" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <nuanliu.com.modao.widget.TouchTextView
            android:id="@+id/tv_season3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_rectangular_normal"
            android:clickable="true"
            android:gravity="center"
            android:text="2015~2016"
            android:textColor="@color/charactertintgray"
            android:textSize="15sp"
            app:gTouchEffect="ripple" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/gray" />
    </LinearLayout>

</LinearLayout>