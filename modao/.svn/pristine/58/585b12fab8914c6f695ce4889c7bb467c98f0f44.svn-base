<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appBarLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="112px"
        android:fitsSystemWindows="true"
        app:navigationIcon="@mipmap/backindex"
        app:theme="@style/ToolbarTheme">

        <nuanliu.com.modao.widget.TouchRelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#0FFF"
            android:gravity="center_vertical"
            app:gTouchEffect="ripple">

            <nuanliu.com.modao.widget.TouchTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textColor="#FFF"
                android:textSize="19sp"
                app:gTouchEffect="ripple" />

            <ImageView
                android:id="@+id/projectchoose_pic"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/title"
                android:src="@mipmap/project_change"
                android:visibility="gone" />

        </nuanliu.com.modao.widget.TouchRelativeLayout>

        <nuanliu.com.modao.widget.TouchLinearLayout
            android:id="@+id/tll_add_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#0fff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="visible"
            app:gTouchEffect="ripple">

            <ImageView
                android:id="@+id/iv_add_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/add_address2"
                android:layout_gravity="center"/>

        </nuanliu.com.modao.widget.TouchLinearLayout>

    </android.support.v7.widget.Toolbar>

</android.support.design.widget.AppBarLayout>