<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appBarLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="112px"
        app:navigationIcon="@mipmap/backindex"
        app:theme="@style/ToolbarTheme">

        <nuanliu.com.modao.widget.TouchRelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:background="#0FFF"
            app:gTouchEffect="ripple">
            <nuanliu.com.modao.widget.TouchTextView
                android:text=""
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#FFF"
                android:textSize="19sp"
                app:gTouchEffect="ripple"/>
            <ImageView
                android:layout_marginTop="10px"
                android:id="@+id/projectchoose_pic"
                android:layout_toRightOf="@id/title"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/project_change"
                android:visibility="gone"/>
        </nuanliu.com.modao.widget.TouchRelativeLayout>

        <nuanliu.com.modao.widget.TouchLinearLayout
            android:id="@+id/tll_projectchange"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_gravity="right"
            android:background="#0fff"
            app:gTouchEffect="ripple">
            <TextView
                android:paddingTop="7.5dp"
                android:paddingLeft="7.5dp"
                android:paddingBottom="7.5dp"
                android:paddingRight="2.5dp"
                android:id="@+id/projecname"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_changepic"
                android:layout_marginTop="10dp"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@mipmap/project_change"/>
        </nuanliu.com.modao.widget.TouchLinearLayout>

    </android.support.v7.widget.Toolbar>

</android.support.design.widget.AppBarLayout>