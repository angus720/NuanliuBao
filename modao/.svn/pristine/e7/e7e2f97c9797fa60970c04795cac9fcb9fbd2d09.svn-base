<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.nuanliu.finme.widget.TouchTextView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_rectangular_top2_5dp_bgwhite"
        android:clickable="true"
        android:gravity="center"
        android:text="拍照"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:gTouchEffect="ripple" />

    <com.nuanliu.finme.widget.TouchTextView
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0.5dp"
        android:background="@drawable/shape_rectangular_bottom2_5dp"
        android:clickable="true"
        android:gravity="center"
        android:text="相册"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:gTouchEffect="ripple" />

    <com.nuanliu.finme.widget.TouchTextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="8dp"
        android:background="@drawable/shape_dialog_4_5dp"
        android:clickable="true"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:gTouchEffect="ripple" />

</LinearLayout>