<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_order_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_repair_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="梦园小区"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="8dp"
                android:text="待处理"
                android:textColor="@color/orange"
                android:textSize="13sp" />

        </RelativeLayout>

        <View style="@style/view_line_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_repair_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="【暖气不热】"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </RelativeLayout>

        <View style="@style/view_line_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginRight="8dp">

            <TextView
                android:id="@+id/tv_repair_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:text="2018-06-27 15:20"
                android:textColor="@color/charactertintgray"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_del_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_view_order"
                android:src="@mipmap/delete_icon"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_view_order"
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toLeftOf="@id/tv_repair_status"
                android:background="@drawable/btn_gray_bg"
                android:gravity="center"
                android:text="查看工单"
                android:textColor="@color/charactertintgray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_repair_status"
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:background="@drawable/btn_common_bg"
                android:gravity="center"
                android:text="完成维修"
                android:textColor="@color/orange"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>