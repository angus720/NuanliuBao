<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    tools:context=".ui.activity.AddressManagerActivity">

    <include layout="@layout/head_toolbar"/>

    <nuanliu.com.modao.widget.TouchRelativeLayout
        android:id="@+id/trl_repair_address"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        app:gTouchEffect="ripple">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="报修地址"
            android:textColor="@color/charactergray"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/go_next" />

    </nuanliu.com.modao.widget.TouchRelativeLayout>

    <View style="@style/view_line_gray" />

    <nuanliu.com.modao.widget.TouchRelativeLayout
        android:id="@+id/trl_mail_address"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        app:gTouchEffect="ripple">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="邮寄地址"
            android:textColor="@color/charactergray"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/go_next" />

    </nuanliu.com.modao.widget.TouchRelativeLayout>

</LinearLayout>