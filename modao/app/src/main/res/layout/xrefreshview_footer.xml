<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/xrefreshview_footer_content"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/white"
                android:padding="10dp">

    <net.qiujuer.genius.ui.widget.Loading
        android:id="@+id/xrefreshview_footer_progressbar"
        android:layout_centerHorizontal="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:gAutoRun="true"
        app:gBackgroundLineSize="3dp"
        app:gForegroundColor="@color/charactertintgray"
        app:gForegroundLineSize="3dp"
        app:gProgressStyle="circle"/>

    <TextView
        android:id="@+id/xrefreshview_footer_hint_textview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/xrefreshview_footer_hint_normal"/>

    <TextView
        android:id="@+id/xrefreshview_footer_click_textview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/xrefreshview_footer_hint_ready"/>
</RelativeLayout>