<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_order_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_repair_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:text="梦园小区"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="8dp"
                    android:text=""
                    android:textColor="@color/orange"
                    android:textSize="13sp" />

            </RelativeLayout>

            <View style="@style/view_line_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_repair_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="【暖气不热】"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View style="@style/view_line_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginRight="8dp">

                <TextView
                    android:id="@+id/tv_repair_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="8dp"
                    android:text="2018-06-27 15:20"
                    android:textColor="@color/charactertintgray"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_delete_order"
                        android:layout_width="75dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/btn_common_bg"
                        android:gravity="center"
                        android:text="删 除"
                        android:textColor="@color/orange"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_repair_status"
                        android:layout_width="75dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/btn_common_bg"
                        android:gravity="center"
                        android:text="撤销报修"
                        android:textColor="@color/orange"
                        android:textSize="14sp" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_finished_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="55dp"
            android:src="@mipmap/ic_finished"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>