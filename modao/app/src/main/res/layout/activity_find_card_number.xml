<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    tools:context=".ui.activity.FindCardNumberActivity">

    <include layout="@layout/head_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="供热公司名称"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <nuanliu.com.modao.widget.TouchRelativeLayout
            android:id="@+id/trl_choose_company"
            android:layout_width="match_parent"
            android:layout_height="84px"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_bg"
            android:clickable="true"
            app:gTouchEffect="ripple">

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_choose_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                android:src="@mipmap/choose_triangle" />

        </nuanliu.com.modao.widget.TouchRelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="业主姓名"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <nuanliu.com.modao.widget.TouchRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="84px"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_bg"
            app:gTouchEffect="ripple">

            <EditText
                android:id="@+id/et_owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:background="@null"
                android:hint="请填写您在热力公司登记的名字"
                android:textSize="14sp" />

        </nuanliu.com.modao.widget.TouchRelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="用户旧卡号"
            android:textColor="@color/black"
            android:textSize="16sp" />

            <nuanliu.com.modao.widget.TouchRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="84px"
                android:layout_margin="8dp"
                android:background="@drawable/edit_text_bg"
                app:gTouchEffect="ripple">

                <EditText
                    android:id="@+id/et_owner_old_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:background="@null"
                    android:hint="请填写您的旧卡号"
                    android:textSize="14sp" />

            </nuanliu.com.modao.widget.TouchRelativeLayout>

        <View
            style="@style/view_line_gray"
            android:layout_height="10dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:text="温馨提示："
            android:textColor="@color/charactertintgray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="5dp"
            android:text="@string/bind_tip"
            android:textColor="@color/charactertintgray" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="@color/orange"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>