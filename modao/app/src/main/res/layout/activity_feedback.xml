<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.FeedbackActivity">

    <include layout="@layout/head_toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <nuanliu.com.modao.widget.ClearEditText
            android:id="@+id/cet_feedback"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@null"
            android:gravity="top"
            android:maxLength="300"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:hint="@string/feedback"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_text_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_gravity="bottom|right"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:text="0/300"/>

    </FrameLayout>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/radio_button_select_bg"
        android:textColor="@color/white"
        android:text="提交"/>

</LinearLayout>