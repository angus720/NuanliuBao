<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <nuanliu.com.modao.widget.TouchTextView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_rectangular_top2_5dp_bgwhite"
        android:clickable="false"
        android:gravity="center"
        android:text="请选择地图"
        android:textSize="13sp" />
    <nuanliu.com.modao.widget.TouchTextView
        android:id="@+id/gaode_map"
        android:text="高德地图"
        app:gTouchEffect="ripple"
        style="@style/ttv_choose_map"/>

    <nuanliu.com.modao.widget.TouchTextView
        android:id="@+id/baidu_map"
        android:text="百度地图"
        app:gTouchEffect="ripple"
        style="@style/ttv_choose_map"/>

    <nuanliu.com.modao.widget.TouchTextView
        android:id="@+id/tengxun_map"
        android:text="腾讯地图"
        app:gTouchEffect="ripple"
        style="@style/ttv_choose_map"
        android:background="@drawable/shape_rectangular_bottom2_5dp"/>

    <nuanliu.com.modao.widget.TouchTextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="8dp"
        android:background="@drawable/shape_dialog_4_5dp"
        android:clickable="true"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/characterblack"
        android:textSize="16sp"
        app:gTouchEffect="ripple" />

</LinearLayout>